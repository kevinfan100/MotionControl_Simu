{
  "permissions": {
    "allow": [
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git checkout:*)",
      "Bash(git fetch:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(matlab:*)",
      "Bash(dir:*)",
      "Bash(findstr:*)",
      "Bash(for branch in *)",
      "Bash(while read branch)",
      "SlashCommand(/resume)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "type": "command",
        "command": "powershell -c \"(New-Object Media.SoundPlayer 'C:\\Windows\\Media\\chimes.wav').PlaySync()\""
      }
    ],
    "Notification": [
      {
        "type": "command",
        "command": "powershell -ExecutionPolicy Bypass -File \".claude\\notification.ps1\""
      }
    ]
  }
}
